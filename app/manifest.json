{
    "name": "__MSG_appName__",
    "version": "1.1.3",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/utils.js",
            "scripts/jquery.min.js",
            "scripts/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "kTime",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://srv-tornos/EVALOSNET/SuiteKiosko/Listados/*"
            ],
            "js": [
                "scripts/utils.js",
                "scripts/contentscript.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        },
        {
            "matches": [
                "http://srv-tornos/EVALOSNET/SuiteKiosko/Defecto/Menu.aspx"
            ],
            "js": [
                "scripts/utils.js",
                "scripts/menuscript.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        },
        {
            "matches": [
                "http://srv-tornos/EVALOSNET/SuiteKiosko/DEFECTO/LOGIN.ASPX"
            ],
            "js": [
                "scripts/utils.js",
                "scripts/loginscript.js"
            ],
            "run_at": "document_end"
        }
    ],
    "options_ui": {
        "page": "config.html",
        "chrome_style": true,
        "open_in_tab": true
    },
    "permissions": [
        "tabs",
        "alarms",
        "notifications",
        "activeTab"
    ]
}
